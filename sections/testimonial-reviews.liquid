{{ 'section-testimonial-reviews.css' | asset_url | stylesheet_tag }}
{{ 'https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css' | stylesheet_tag }}
{{ 'https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js' | script_tag }}

<div class="testimonial-reviews{% if section.settings.full_width %} page-width{% endif %}">
  <div class="section-header">
    <h2 class="text-center" style="font-weight: 500;">{{ section.settings.title }}</h2>
  </div>

  <div class="swiper testimonial-slider">
    <div class="swiper-wrapper">
      {%- for block in section.blocks -%}
        <div class="swiper-slide" {{ block.shopify_attributes }}>
          <div class="testimonial-item">
            <div class="testimonial-content">
              <div class="star-rating" aria-hidden="true">
                {%- for i in (1..5) -%}
                  {{- 'icon-rating.svg' | inline_asset_content -}}
                {%- endfor -%}
              </div>
              <h3 class="testimonial-title">{{ block.settings.title }}</h3>
              <div class="testimonial-text">{{ block.settings.text }}</div>
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
    <div class="swiper-pagination"></div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const initializeSlider = () => {
      const slidesPerView = window.innerWidth >= 750 ? 2 : 1;
      new Swiper('.testimonial-slider', {
        slidesPerView: slidesPerView,
        spaceBetween: 30,
        pagination: {
          el: '.swiper-pagination',
          clickable: true,
        },
        breakpoints: {
          750: {
            slidesPerView: 2,
          },
        },
      });
    };

    initializeSlider();

    // Reinitialize on section reload in theme editor
    if (Shopify.designMode) {
      document.addEventListener('shopify:section:load', function (event) {
        if (event.target.classList.contains('testimonial-reviews')) {
          initializeSlider();
        }
      });
    }
  });
</script>

{% schema %}
{
  "name": "Testimonial Reviews",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "See What Canadians Say About Maple Mattress"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Easy Setup and Super Comfort"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Testimonial",
          "default": "I recently purchased a Maple mattress, and I couldn't be happier! It was incredibly easy to set up, and the comfort level is off the charts. Since making the switch, my sleep has improved significantly. I wake up feeling refreshed and ready to take on the day. Highly recommend!"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonial Reviews",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}
