<div class="contact-info grid grid--1-col-tablet-down grid--2-col-desktop page-width">
  <div class="grid__item">
    {% if section.settings.contact_image %}
      <img
        srcset="
          {%- if section.settings.contact_image.width >= 165 -%}{{ section.settings.contact_image | image_url: width: 165 }} 165w,{%- endif -%}
          {%- if section.settings.contact_image.width >= 360 -%}{{ section.settings.contact_image | image_url: width: 360 }} 360w,{%- endif -%}
          {%- if section.settings.contact_image.width >= 533 -%}{{ section.settings.contact_image | image_url: width: 533 }} 533w,{%- endif -%}
          {%- if section.settings.contact_image.width >= 720 -%}{{ section.settings.contact_image | image_url: width: 720 }} 720w,{%- endif -%}
          {%- if section.settings.contact_image.width >= 940 -%}{{ section.settings.contact_image | image_url: width: 940 }} 940w,{%- endif -%}
          {%- if section.settings.contact_image.width >= 1066 -%}{{ section.settings.contact_image | image_url: width: 1066 }} 1066w,{%- endif -%}
          {{ section.settings.contact_image | image_url }} {{ section.settings.contact_image.width }}w
        "
        src="{{ section.settings.contact_image | image_url: width: 533 }}"
        sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 130 | divided_by: 4 }}px, (min-width: 990px) calc((100vw - 130px) / 4), (min-width: 750px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)"
        alt="{{ section.settings.contact_image.alt | escape }}"
        class="motion-reduce"
        style="width: 100%"
        loading="lazy"
      >

    {% endif %}
  </div>

  <div class="grid__item">
    <div class="" style="padding: 20px;">
      {{ section.settings.contact_us_info }}
    </div>

    <div class="" style="padding: 20px;">
      <h3>For Other Inquiries Information</h3>
      {{ section.settings.other_inquiries_info }}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Contact Info",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "contact_image",
      "label": "Contact Image"
    },
    {
      "type": "richtext",
      "id": "contact_us_info",
      "label": "Contact Us Information",
      "default": "<p>Phone: (123) 456-7890\nEmail: contact@example.com\nAddress: 123 Main St, City, State, ZIP</p>"
    },
    {
      "type": "richtext",
      "id": "other_inquiries_info",
      "label": "For Other Inquiries Information",
      "default": "<p>General Inquiries: info@example.com\nSupport: support@example.com\nFeedback: feedback@example.com</p>"
    }
  ],
  "presets": [
    {
      "name": "Contact Info",
      "settings": {
        "contact_us_info": "<p>Phone: (123) 456-7890\nEmail: contact@example.com\nAddress: 123 Main St, City, State, ZIP</p>",
        "other_inquiries_info": "<p>General Inquiries: info@example.com\nSupport: support@example.com\nFeedback: feedback@example.com</p>"
      }
    }
  ]
}
{% endschema %}
