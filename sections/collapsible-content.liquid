<style>
  .accordion--hidden {
    display: none;
  }
  .collapsible-content__read-more {
    margin-top: 20px;
    text-align: center;
  }
  .collapsible-content__read-more-link {
    display: inline-block;
    padding: 10px 20px;
    background-color: var(--color-button);
    color: var(--color-button-text);
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: 500;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }
  .collapsible-content__read-more-link:hover {
    background-color: var(--color-button-hover);
  }
  .collapsible-content__search {
    margin: 20px auto;
    max-width: 500px;
    position: relative;
  }
  .collapsible-content__search-input {
    width: 100%;
    padding: 10px 40px 10px 15px;
    border: 1px solid rgba(var(--color-foreground), 0.1);
    border-radius: 4px;
    font-size: 1.6rem;
    line-height: 1.5;
    transition: border-color 0.3s ease;
    background-color: rgb(var(--color-background));
    color: rgb(var(--color-foreground));
  }
  .collapsible-content__search-input:focus {
    outline: none;
    border-color: rgba(var(--color-foreground), 0.3);
  }
  .collapsible-content__search-input::placeholder {
    color: rgba(var(--color-foreground), 0.6);
  }
  .collapsible-content__no-results {
    text-align: center;
    padding: 20px;
    color: rgba(var(--color-foreground), 0.75);
    display: none;
  }
  .collapsible-content__search-icon {
    position: absolute;
    right: 15px;
    top: 50%;
    transform: translateY(-50%);
    width: 20px;
    height: 20px;
    pointer-events: none;
  }
  .accordion {
    transition: opacity 0.3s ease;
  }
  .accordion.filtered-out {
    display: none;
  }
  @media screen and (max-width: 749px) {
    .collapsible-content__search {
      margin: 15px;
    }
    .collapsible-content__search-input {
      font-size: 1.4rem;
    }
  }
</style>

{% if section.settings.enable_search %}
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.querySelector('.collapsible-content__search-input');
    const accordionItems = document.querySelectorAll('.accordion');
    const noResultsMessage = document.querySelector('.collapsible-content__no-results');
    
    if (searchInput && accordionItems.length > 0) {
      searchInput.addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase().trim();
        let visibleCount = 0;
        
        accordionItems.forEach(item => {
          const heading = item.querySelector('.accordion__title')?.textContent.toLowerCase() || '';
          const content = item.querySelector('.accordion__content')?.textContent.toLowerCase() || '';
          
          if (searchTerm === '' || heading.includes(searchTerm) || content.includes(searchTerm)) {
            item.classList.remove('filtered-out');
            item.classList.remove('accordion--hidden');
            visibleCount++;
          } else {
            item.classList.add('filtered-out');
          }
        });
        
        // Show/hide no results message
        if (searchTerm !== '' && visibleCount === 0) {
          noResultsMessage.style.display = 'block';
        } else {
          noResultsMessage.style.display = 'none';
        }
        
        // Hide "Read More" button when searching
        const readMoreBtn = document.querySelector('.collapsible-content__read-more');
        if (readMoreBtn) {
          readMoreBtn.style.display = searchTerm === '' ? '' : 'none';
        }
      });
    }
  });
</script>
{% endif %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="collapsible-content collapsible-{{ section.settings.layout }}-layout isolate{% if section.settings.layout == 'section' %} page-width{% elsif section.settings.layout == 'none' %} content-container content-container--full-width{% endif %}">
    <div class="collapsible-content__wrapper section-{{ section.id }}-padding{% if section.settings.layout == 'section' %} content-container color-{{ section.settings.container_color_scheme }} gradient{% endif %}">
      <div class="page-width">
        <div
          class="collapsible-content__header{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          style="text-align: {{ section.settings.heading_alignment }};"
        >
          {%- if section.settings.caption != blank -%}
            <p class="caption-with-letter-spacing">
              {{ section.settings.caption | escape }}
            </p>
          {% endif %}
        </div>
        <div
          class="grid grid--1-col grid--2-col-tablet collapsible-content__grid{% if section.settings.desktop_layout == 'image_second' %} collapsible-content__grid--reverse{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        >
          {%- if section.settings.image != blank -%}
            <div class="grid__item collapsible-content__grid-item">
              <div
                class="collapsible-content__media collapsible-content__media--{{ section.settings.image_ratio }} media global-media-settings gradient"
                {% if section.settings.image_ratio == 'adapt' %}
                  style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"
                {% endif %}
              >
                {%- liquid
                  assign padding_multiplier = 1
                  if section.settings.layout == 'section'
                    assign padding_multiplier = 2
                  endif
                  assign desktop_tablet_padding = 100 | times: padding_multiplier | append: 'px'
                  assign mobile_padding = 30 | times: padding_multiplier | append: 'px'
                -%}
                {%- capture sizes -%}
                  (min-width: {{ settings.page_width }}px) calc(({{ settings.page_width }}px - {{ desktop_tablet_padding }}) / 2),
                  (min-width: 750px) calc((100vw - {{ desktop_tablet_padding }}) / 2),
                  calc(100vw - {{ mobile_padding }})
                {%- endcapture -%}
                {{
                  section.settings.image
                  | image_url: width: 3200
                  | image_tag:
                    sizes: sizes,
                    widths: '50, 75, 100, 150, 200, 300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000, 3200'
                }}
              </div>
            </div>
          {% endif %}
          <div class="grid__item">
            {%- if section.settings.heading != blank -%}
              <h2 class="collapsible-content__heading inline-richtext {{ section.settings.heading_size }}">
                {{ section.settings.heading }}
              </h2>
            {%- else -%}
              <h2 class="visually-hidden">{{ 'accessibility.collapsible_content_title' | t }}</h2>
            {% endif %}

            {% if section.settings.enable_search %}
              <div class="collapsible-content__search">
                <input
                  type="text"
                  class="collapsible-content__search-input"
                  placeholder="{{ section.settings.search_placeholder }}"
                  aria-label="{{ section.settings.search_placeholder }}"
                >
                <svg class="collapsible-content__search-icon" viewBox="0 0 32 32" width="20" height="20" fill="none" stroke="currentColor">
                  <circle cx="14" cy="14" r="9" stroke-width="2"/>
                  <path d="M21 21L27 27" stroke-width="2" stroke-linecap="round"/>
                </svg>
              </div>
              <div class="collapsible-content__no-results">
                No matching content found
              </div>
            {% endif %}
            {%- assign total_blocks = section.blocks | size -%}
            {%- for block in section.blocks -%}
              {%- assign block_index = forloop.index -%}
              <div
                class="accordion{% if section.settings.layout == 'row' %} content-container {% endif %}{% if block_index > 10 %} accordion--hidden{% endif %}"
                {{ block.shopify_attributes }}
              >
                <details
                  id="Details-{{ block.id }}-{{ section.id }}"
                  {% if section.settings.open_first_collapsible_row and forloop.first %}
                    open
                  {% endif %}
                >
                  <summary id="Summary-{{ block.id }}-{{ section.id }}">
                    {% render 'icon-accordion', icon: block.settings.icon %}
                    <h3 class="accordion__title inline-richtext h4">
                      {{ block.settings.heading | default: block.settings.page.title | escape }}
                    </h3>
                    {{- 'icon-caret.svg' | inline_asset_content -}}
                  </summary>
                  <div
                    class="accordion__content rte"
                    id="CollapsibleAccordion-{{ block.id }}-{{ section.id }}"
                    role="region"
                    aria-labelledby="Summary-{{ block.id }}-{{ section.id }}"
                  >
                    {{ block.settings.row_content }}
                    {{ block.settings.page.content }}
                  </div>
                </details>
              </div>
            {%- endfor -%}
            
            {% if total_blocks > 10 and section.settings.read_more_link != blank %}
              <div class="collapsible-content__read-more">
                <a href="{{ section.settings.read_more_link }}" class="collapsible-content__read-more-link">
                  {{ section.settings.read_more_text | default: 'Read More' }}
                </a>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

