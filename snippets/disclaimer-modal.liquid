<section id="disclaimer-modal-container">
  <section id="disclaimer-modal">
    {{ settings.logo | image_url: width: 600 | image_tag:
      class: 'header__heading-logo motion-reduce',
      widths: widths,
      height: logo_height,
      width: settings.logo_width,
      alt: logo_alt,
      sizes: sizes,
      preload: true
    }}
    <h2>{{ settings.disclaimer_title }}</h2>
    <section>{{ settings.disclaimer_content }}</section>
    <section id="disclaimer-modal-btns">
      <a class="button" href="javascript:;" onclick="handleDisclaimerClick('yes')">{{ settings.agree_text }}</a>
      <a class="button" href="javascript:;" onclick="handleDisclaimerClick('no')">{{ settings.disagree_text }}</a>
    </section>
  </section>
</section>

<style>
  #disclaimer-modal-container {
    display: none;
    background: rgba(0,0,0,0.5);
    justify-content: center;
    align-items: center;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: 99999;
  }
  #disclaimer-modal {
    max-width: 624px;
    width:100%;
    background-color: #fff;
    padding: 20px;
    border-radius: 20px;
    text-align: center;
  }
  #disclaimer-modal-btns {
    display: flex;
    justify-content: space-between;
  }
</style>
<script>
  window.addEventListener("load", (event) => {
    const readDisclaimer = sessionStorage.getItem("readDisclaimer");
    if (!readDisclaimer) {
      document.getElementById("disclaimer-modal-container").style.display = "flex";
    }
  });
  const handleDisclaimerClick = (answer) => {
    if (answer === "yes") {
      sessionStorage.setItem("readDisclaimer",answer);
      document.getElementById("disclaimer-modal-container").style.display = "none";
    } else {
      location.href = "https://www.google.ca";
    }
  }
</script>