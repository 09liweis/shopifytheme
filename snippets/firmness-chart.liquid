{% comment %}
  Render firmness chart section

  Usage:
  {% render 'firmness-chart' %}
{% endcomment %}

<style>
  .bg-chart {
    background-color: #fdf4eb;
    text-align: center;
  }
  #firmness-chart-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: 99999;
  }
  .chart-cell {
    padding: 10px;
    border: 0.5px solid;
  }
</style>

<section id="firmness-chart-container" class="hidden flex justify-center items-center">
  <div id="firmness-chart" class="flex bg-chart">
    <div class="flex flex-column" style="width:20%;">
      <b class="chart-cell">FEATURES</b>
      <div class="chart-cell">Material</div>
      <div class="chart-cell">Height</div>
      <div class="chart-cell">Style</div>
      <div class="chart-cell">Fit for Beds</div>
      <div class="chart-cell">Great For</div>
      <div class="chart-cell">Packaging</div>
    </div>
    <div class="flex flex-column" style="width:40%;">
      <b class="chart-cell">FIRM</b>
      <div class="chart-cell">Hight Resillient Foam, High Density Foam, no coins</div>
      <div class="chart-cell">10 inch</div>
      <div class="chart-cell">Foam Mattress</div>
      <div class="chart-cell">Works with any boxspring, platform bed, or slats.</div>
      <div class="chart-cell">For back and stomach sleepers</div>
      <div class="chart-cell">Mattress in a Box</div>
    </div>
    <div class="flex flex-column" style="width:40%;">
      <b class="chart-cell">MEDIUM-FIRM</b>
      <div class="chart-cell">Hight Resillient Foam, High Density Foam, no coins</div>
      <div class="chart-cell">11 inch</div>
      <div class="chart-cell">Foam Mattress</div>
      <div class="chart-cell">Works with any boxspring, platform bed, or slats.</div>
      <div class="chart-cell">For back and side sleepers</div>
      <div class="chart-cell">Mattress in a Box</div>
    </div>
  </div>
</section>

<script>
  window.addEventListener('load', () => {
    var firmnessChartLink = document.querySelector('#open-firmness-chart');
    var firmnessChart = document.querySelector('#firmness-chart-container');
    firmnessChartLink.addEventListener('click', () => {
      firmnessChart.classList.toggle('hidden');
    });

    firmnessChart.addEventListener('click', () => {
      firmnessChart.classList.toggle('hidden');
    });
  });
</script>
